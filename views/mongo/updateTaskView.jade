extends ../layouts/layout

block content

  h1 #{title}

  - if(mensaje != 'undefined' && clase != 'undefined')
    - if (clase == 'success')
      div.success
        p= mensaje
    - if (clase == 'error')
      div.error
        p= mensaje
    - if (clase == 'info')
      div.info
        p= mensaje
    - if (clase == 'warning')
      div.warning
        p= mensaje

  form(method='post', action='/mongoUpdate/' + task.id)
    input(name='_method', value='PUT', type='hidden')
    fieldset
      legend Editing task
      div.clearfix
        label Task
        div.input
          input(name='task', class='xlarge', value='#{task.task}')
      div.actions
         input(type='submit', value='Save', class='btn primary')
         button(type='reset', class='btn') Cancel